<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.icatch.mobilecam.ui.Fragment.RemoteMultiPbPhotoFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/no_content_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_content"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/first_title_size"
            android:visibility="gone"/>
        <com.tinyai.libmediacomponent.components.filelist.FileListView
            android:id="@+id/file_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:enable_delete="false"
            app:enable_download="false"
            app:enable_checked="false"
            />

    </RelativeLayout>
</LinearLayout>
