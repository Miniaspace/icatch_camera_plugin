<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/media_top_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#4D000000">

                <ImageView
                    android:id="@+id/media_top_bar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/nav_btn_back" />

                <TextView
                    android:id="@+id/media_top_bar_title"
                    style="@style/navigationTextviewPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/media_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#4D000000">

                <ImageView
                    android:id="@+id/preview_fullscreen_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/media_video_btn_full_screen" />

                <TextView
                    android:id="@+id/preview_size_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/preview_fullscreen_switch"
                    android:background="@drawable/media_shape_bg_circle"
                    android:gravity="center"
                    android:minWidth="48dp"
                    android:padding="2dp"
                    android:text="@string/meida_text_resolution_smooth"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/second_title_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/preview_video_bitrate_txv"
                    style="@style/secondTextviewPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="0KB/s"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/preview_client_count_txv"
                    style="@style/secondTextviewPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/preview_video_bitrate_txv"
                    android:text="1"
                    android:visibility="gone" />
        </RelativeLayout>

</RelativeLayout>

