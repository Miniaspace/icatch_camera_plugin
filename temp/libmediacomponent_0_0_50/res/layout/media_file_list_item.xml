<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/meida_selector_white2lightred"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/media_thumbnail_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:layout_margin="2dp"
            android:visibility="visible">

            <com.tinyai.libmediacomponent.components.BorderImageView
                android:id="@+id/media_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/meida_camera_roll_btn_photo_loading" />

            <ImageView
                android:id="@+id/video_type_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/meida_video_item_btn" />

            <TextView
                android:id="@+id/file_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/least_title_size"
                android:layout_margin="4dp"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="REC_20240223.mp4"
                    />


                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="4dp">

                    <ImageView
                        android:id="@+id/file_type_imv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/message_center_btn_action_detection"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/file_time_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="@dimen/second_title_size"
                        android:text="2024-02-23"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <RelativeLayout
                        android:id="@+id/download_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        >

                        <TextView
                            android:id="@+id/media_file_download_size_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="5MB / "
                            android:textSize="@dimen/second_title_size" />

                        <TextView
                            android:id="@+id/media_file_size_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/media_file_download_size_tv"
                            android:text="5MB"
                            android:textSize="@dimen/second_title_size" />

                        <TextView
                            android:id="@+id/downloaded_txv"
                            style="@style/leastTextviewPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="4dp"
                            android:text="@string/media_text_downloaded"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/download_progress_bar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_below="@+id/download_info_layout"
                         />


                    <ImageView
                        android:id="@+id/download_imv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/meida_selector_bg_circle_primary"
                        android:src="@drawable/meida_selector_download_btn"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/photo_wall_list_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meida_check_box_blank_grey"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
