<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/media_top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/media_top_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/nav_btn_back" />

        <TextView
            android:id="@+id/media_top_bar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="@color/white_text"
            android:textSize="@dimen/navigation_size"
            android:text="dd"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/media_top_bar_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/media_video_btn_delect" />

            <ImageView
                android:id="@+id/media_top_bar_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/media_video_btn_download" />

            <ImageView
                android:id="@+id/media_top_bar_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/media_video_btn_more" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/media_play_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:layout_gravity="bottom"
        android:layout_margin="10dp">
        <SeekBar
            android:id="@+id/media_pb_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="2dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:thumbOffset="3.0dp"
            android:progressDrawable="@drawable/meida_po_seekbar" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/media_play_imgbtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="@color/full_transparent"
                android:padding="10dp"
                android:src="@drawable/media_video_btn_play"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/media_pb_time_lapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="00:00"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/media_pb_time_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00:00"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/media_audio_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:src="@drawable/file_audio" />

    <ImageView
        android:id="@+id/media_play_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="@drawable/media_shape_bg_round"
        android:src="@drawable/media_video_btn_play"
        android:visibility="visible" />

    <com.icatchtek.basecomponent.customcomponent.MProgressWheel
        android:id="@+id/media_pb_spinner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        app:barColor="@color/primary"
        app:barLengthP="100dp"
        app:barWidth="2dp"
        app:rimColor="#330097D6"
        app:rimWidth="4dp"
        app:text="0%"
        app:textColor="@android:color/white"
        app:contourColor="#330097D6"
        app:textSize="14sp"
        android:visibility="gone"/>

</RelativeLayout>