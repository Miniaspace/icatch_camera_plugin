<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/media_top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4D000000"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/media_top_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_btn_back"/>
        <TextView
            android:id="@+id/media_top_bar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textColor="#F5F5F5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/media_top_bar_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/media_video_btn_delect" />

            <ImageView
                android:id="@+id/media_top_bar_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/media_video_btn_download" />

            <ImageView
                android:id="@+id/media_top_bar_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/media_video_btn_more" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/media_play_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#4D000000"
        android:layout_gravity="bottom">
        <SeekBar
            android:id="@+id/media_pb_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="2dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:thumbOffset="3.0dp"
            android:progressDrawable="@drawable/meida_po_seekbar" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/media_play_imgbtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/full_transparent"
                android:src="@drawable/media_video_btn_play" />

            <ImageButton
                android:id="@+id/media_stop_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/media_play_imgbtn"
                android:layout_marginLeft="8dp"
                android:scaleType="center"
                android:background="@color/primary"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/media_pb_time_lapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/media_stop_btn"
                android:layout_marginLeft="16dp"
                android:text="00:00"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/media_pb_time_lapsed"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/secondary_text"
                android:text="/"/>

            <TextView
                android:id="@+id/media_pb_time_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_space"
                android:text="00:00"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/media_fullscreen_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@color/full_transparent"
                android:src="@drawable/media_video_btn_full_screen" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/media_play_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:src="@drawable/media_home_btn_play" />

    <com.icatchtek.basecomponent.customcomponent.MProgressWheel
        android:id="@+id/media_pb_spinner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        app:barColor="@color/primary"
        app:barLengthP="100dp"
        app:barWidth="2dp"
        app:rimColor="#330097D6"
        app:rimWidth="4dp"
        app:text="0%"
        app:textColor="@android:color/white"
        app:contourColor="#330097D6"
        app:textSize="14sp"
        android:visibility="gone"/>

</RelativeLayout>